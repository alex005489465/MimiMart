# ====================================================================
# Key Pair 模組配置範例
# ====================================================================
# 注意: 複製此檔案為 terraform.tfvars 並填入實際值
# ====================================================================

# 專案資訊
project_name = "your-project-name"
environment  = "prod"  # 可選: dev, staging, prod

# AWS 區域（需與 aws/.env 一致）
aws_region = "ap-south-1"  # 範例: us-east-1, ap-northeast-1, eu-west-1

# Key Pair 配置
key_name   = "your-project-env-app"  # 格式: {project_name}-{environment}-{purpose}
public_key = "ssh-ed25519 AAAAAAAA... your-key-comment"  # 使用 modules/ssh-keygen 生成

# 額外標籤
additional_tags = {
  Purpose = "EC2-SSH-Access"
}
