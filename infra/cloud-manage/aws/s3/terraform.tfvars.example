# ====================================================================
# Terraform 變數配置範例 - 開發環境
# ====================================================================
# 使用說明:
#   1. 複製此檔案為 terraform.tfvars
#   2. 將所有佔位符替換為實際值
#   3. terraform.tfvars 已在 .gitignore 中,不會被提交
# ====================================================================

# --------------------------------------------------------------------
# AWS 認證資訊
# 注意: 這些變數應從 aws/.env 檔案透過環境變數載入
#       無需在此檔案中設定
# --------------------------------------------------------------------

# aws_access_key = "[AWS_ACCESS_KEY]"
# aws_secret_key = "[AWS_SECRET_KEY]"
# aws_region     = "ap-south-1"

# --------------------------------------------------------------------
# 專案基本資訊
# --------------------------------------------------------------------

project_name = "your-project-name"
environment  = "dev"

# --------------------------------------------------------------------
# Member Bucket 命名
#
# 注意: S3 bucket 名稱必須全球唯一
# 建議格式: {project}-{env}-{purpose}-{year}
# --------------------------------------------------------------------

member_bucket_name = "your-project-dev-member-2025"

# --------------------------------------------------------------------
# Member Bucket 配置
# --------------------------------------------------------------------

# 是否啟用版本控制 (開發環境建議關閉以節省成本)
member_enable_versioning = false

# CORS 設定: 允許的來源網域
member_cors_allowed_origins = [
  "http://localhost:5173",                    # 前端本地開發(Vite)
  "http://localhost:5174",                    # 前端本地開發(備用端口)
  "http://storage-member-dev.example.com"     # Cloudflare CDN
]

# CORS 設定: 允許的 HTTP 方法
member_cors_allowed_methods = ["GET", "HEAD", "PUT", "POST", "DELETE"]

# CORS 設定: 允許的請求標頭
member_cors_allowed_headers = ["*"]

# CORS 設定: 預檢請求快取時間 (秒)
member_cors_max_age_seconds = 3600

# --------------------------------------------------------------------
# Public Bucket 命名
#
# 注意: S3 bucket 名稱必須全球唯一
# 建議格式: {project}-{env}-{purpose}-{year}
# --------------------------------------------------------------------

public_bucket_name = "your-project-dev-public-2025"

# --------------------------------------------------------------------
# Public Bucket 配置
# --------------------------------------------------------------------

# 是否啟用版本控制 (開發環境建議關閉以節省成本)
public_enable_versioning = false

# CORS 設定: 允許的來源網域
public_cors_allowed_origins = [
  "http://localhost:5173",                   # 前端本地開發(Vite)
  "http://localhost:5174",                   # 前端本地開發(備用端口)
  "http://storage-public-dev.example.com"    # Cloudflare CDN
]

# CORS 設定: 允許的 HTTP 方法
public_cors_allowed_methods = ["GET", "HEAD"]

# CORS 設定: 允許的請求標頭
public_cors_allowed_headers = ["*"]

# CORS 設定: 預檢請求快取時間 (秒)
public_cors_max_age_seconds = 3600

# --------------------------------------------------------------------
# CDN 配置
# --------------------------------------------------------------------

public_bucket_cdn_domain = "storage-public-dev.example.com"

# --------------------------------------------------------------------
# 額外標籤 (可選)
# --------------------------------------------------------------------

additional_tags = {
  Application = "your-application"
  Feature     = "storage"
  CostCenter  = "Engineering"
}
