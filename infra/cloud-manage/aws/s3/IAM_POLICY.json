{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "StaticBucketObjectAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:GetObjectVersion",
        "s3:GetObjectAttributes"
      ],
      "Resource": "arn:aws:s3:::YOUR-STATIC-BUCKET-NAME/*"
    },
    {
      "Sid": "StaticBucketListAccess",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:GetBucketVersioning"
      ],
      "Resource": "arn:aws:s3:::YOUR-STATIC-BUCKET-NAME"
    },
    {
      "Sid": "LogBucketObjectAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:GetObjectVersion",
        "s3:GetObjectAttributes"
      ],
      "Resource": "arn:aws:s3:::YOUR-LOG-BUCKET-NAME/*"
    },
    {
      "Sid": "LogBucketListAccess",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:GetBucketVersioning"
      ],
      "Resource": "arn:aws:s3:::YOUR-LOG-BUCKET-NAME"
    }
  ]
}
