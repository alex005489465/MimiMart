# ====================================================================
# Terraform 變數配置範例 - SES 郵件服務
# ====================================================================
# 使用說明:
#   1. 複製此檔案為 terraform.tfvars
#   2. 將所有佔位符替換為實際值
#   3. terraform.tfvars 已在 .gitignore 中,不會被提交
# ====================================================================

# --------------------------------------------------------------------
# AWS 認證資訊
# 注意: 這些變數應從 aws/.env 檔案透過環境變數載入
#       無需在此檔案中設定
# --------------------------------------------------------------------

# aws_access_key = "[AWS_ACCESS_KEY]"
# aws_secret_key = "[AWS_SECRET_KEY]"
# aws_region     = "ap-south-1"

# --------------------------------------------------------------------
# 專案基本資訊
# --------------------------------------------------------------------

project_name = "[PROJECT_NAME]"
environment  = "prod"

# --------------------------------------------------------------------
# SES 域名配置
# --------------------------------------------------------------------

# 主域名 (用於 SES 驗證)
domain_name = "example.com"

# --------------------------------------------------------------------
# MAIL FROM 域名配置
# --------------------------------------------------------------------

# 是否啟用自訂 MAIL FROM 域名 (建議啟用以提升郵件信譽)
enable_mail_from_domain = true

# MAIL FROM 子域名
# 建議: noreply.example.com 或 mail.example.com
mail_from_subdomain = "noreply.example.com"

# 當 MAIL FROM 域名 MX 記錄驗證失敗時的行為
# - UseDefaultValue: 使用預設的 amazonses.com 域名 (建議)
# - RejectMessage: 拒絕發送郵件
mail_from_behavior_on_mx_failure = "UseDefaultValue"

# --------------------------------------------------------------------
# Configuration Set 配置
# --------------------------------------------------------------------

# 是否啟用事件目的地 (SNS Topic) 用於接收郵件事件
# 事件類型: bounce (退信)、complaint (投訴)、delivery (送達)
# 注意: 需要手動訂閱 SNS Topic 才能接收通知
enable_event_destination = false

# --------------------------------------------------------------------
# 額外標籤 (可選)
# --------------------------------------------------------------------

additional_tags = {
  Application = "[APPLICATION_NAME]"
  Feature     = "email"
  CostCenter  = "Engineering"
}
